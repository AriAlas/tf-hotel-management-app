<% include partials/header %>
<section class="hero">

    <div class="hero-body ">
        
        <img src="/img/TFHotels_Logo.png" alt = "T | F HOTELS" width = "450px" >
            <span class="is-pulled-right title dateandtime"><span id = "date"></span><span id = "time"></span></span>
       

    </div>
</section>

<div class="columns has-text-centered">


    <div class="column is-two-fifths">
        <h1 class="title is-1">RESERVATION DETAILS</h1>
        
        <form action = "/roomsearch" method = "POST">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">START DATE</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input id="start-date" class="input" type="text" placeholder="YYYY-MM-DD" name = "start-date">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">END DATE</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input id= "end-date" class="input" type="text" placeholder="YYYY-MM-DD" name = "end-date">
                        </p>
                    </div>
                </div>
            </div>



            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">PRICE/NIGHT</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <!--A dropdown box with prices selection goes here-->
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">TOTAL GUESTS</label>
                </div>
                <div class="field-body">
                    <div class="select">
                        <select name = "total_nights">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                        </select>
                    </div>
                </div>
            </div>  

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label"># OF BEDS</label>
                </div>
                <div class="field-body">
                    <div class="select">
                        <select name = "number_of_beds">
                            <option>1</option>
                            <option>2</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">BED TYPE</label>
                </div>
                <div class="field-body">
                    <div class="select">
                        <select name = "bed_type">
                            <option>KING</option>
                            <option>QUEEN</option>
                            <option>FULL</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal ">
                <div class="field-body">
                    <div class="select">
                        <select name = "adjoining">
                            <option>ADJOINING</option>
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                    <div class="select">
                        <select name = "jacuzzi">
                            <option>JACUZZI</option>
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                    <div class="select">
                        <select name = "balcony">
                            <option>BALCONY</option>
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                    <div class="select">
                        <select name = "smoke">
                            <option>SMOKE</option>
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                </div>
            </div>
            <input id = "newreservationsearch" class="button" type="submit" value="Search Room">
        </form>

        <h1 class="title is-1">CUSTOMER DETAILS</h1>
        <form action = "/reservation/new/createguest" method = "POST">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">FIRST NAME</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input class="input" type="text" placeholder="FIRST NAME" name= "first_name" id="first_name">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">LAST NAME</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input class="input" type="text" placeholder="LAST NAME" name= "last_name" id="last_name">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">EMAIL</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input class="input" type="text" placeholder="EMAIL" name= "guest_email" id="guest_email">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">PHONE #</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input class="input" type="text" placeholder="PHONE #" name= "guest_phone" id="guest_phone">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">GUEST NOTES</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <p class="control ">
                                <input class="input" type="text" placeholder="NOTES" name= "guest_notes" id="guest_notes">
                            </p>
                        </div>
                    </div>
                </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">CREDIT CARD NUMBER</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input class="input" type="text" placeholder="####-####-####-####" name= "credit_card_number" id="credit_card_number">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">CREDIT CARD TYPE</label>
                </div>
                <div class="field-body">
                    <div class="select">
                        <select name="credit_card_type" id="credit-card-type">
                            <option>AMEX</option>
                            <option>VISA</option>
                            <option>MASTERCARD</option>
                            <option>DISCOVER</option>
                        </select>
                    </div>
                </div>
            </div>  

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">EXPIRATION DATE</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control ">
                            <input class="input" type="text" placeholder="MM/YYYY" name= "credit_card_expiration" id= "credit_card_expiration">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field ">
                <div class = "control">
                    <input class="button previous-guest-search" type="submit" value="SEARCH PREVIOUS GUESTS" name="search-previous-guest">
                </div>
            </div>

            <div class="field ">
                <div class = "control">
                    <input class="button create_new_guest" type="submit" value="CREATE NEW GUEST" name="create_new_guest">
                </div>
            </div>
        </form>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">TOTAL PRICE</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <!--This is Price/Night * total/Nights-->
                    </p>
                </div>
            </div>
        </div>
        
    </div>


    <div class = "column relative">
    <div class="room-search-table">

    <section class = "section header">
        <h1 class="title is-1 ">ROOMS AVAILABLE</h1>
    </section>

        <div class="room-search">
             <!--ROOMS TABLE GOES HERE-->
            <% if (Room) {%>
                <% include partials/new-reservation-default %>
            <%} else if (validRoom) {%>
                <% include partials/new-reservation-search %>
            <%}%>
        </div>
    </div>
    
    <div class="guest-search-table">
        <section class = "section header">
        <h1 class="title is-1 ">PREVIOUS GUESTS</h1>
        </section>
        <div class="previous-guest-search">
            <!--GUEST TABLE GOES HERE-->
            <% include partials/previous-guests %>
        </div>
    </div>
    <div class = "columns absolute">
    <div class="res-info" >
            <div class = "column">
                <h1 class = "title is-3">ROOM #100</h1>
                <h1 class = "title is-3"> PRICE $200 </h1> 
            </div>
            <div class = "column">
                <input class="button is-large" type="submit" value="CREATE RESERVATION">
            </div>
        </div>
    </div>


    </div>
        
    
</div>

<% include partials/footer %>