<% include partials/header %>
<section class="hero">
    <div class="hero-body">
        <div class="container">
            <h1 class="title is-inline">
                T | F HOTELS
            </h1>
            <span class="is-pulled-right title">CURRENT MOMENTJS TIME GOES HERE</span>
        </div>
    </div>
</section>

<div class="columns has-text-centered ">
    <div class="column is-one-third">

        <h1 class="title is-1">RESERVATION DETAILS</h1>
        
        <form action = "/rooms" method = "POST">
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">CHECK-IN</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="YYYY-MM-DD" name = "date_in">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">CHECK-OUT</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="YYYY-MM-DD" name = "date_out">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">TOTAL NIGHTS</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="TOTAL NIGHTS" name = "total_nights">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">PRICE/NIGHT</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <!--A dropdown box with prices selection goes here-->
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">TOTAL GUESTS</label>
            </div>
            <div class="field-body">
            <div class="select">
            <select name = "total_nights">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
              
            </select>
        </div>
            </div>
        </div>  



        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label"># OF BEDS</label>
            </div>
            <div class="field-body">
            <div class="select">
            <select name = "number_of_beds">
                <option>1</option>
                <option>2</option>
              
            </select>
        </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">BED TYPE</label>
            </div>
            <div class="field-body">
            <div class="select">
            <select name = "bed_type">
                <option>KING</option>
                <option>QUEEN</option>
                <option>FULL</option>
            </select>
        </div>
            </div>
        </div>

        <div class="field is-horizontal ">
            <div class="field-body">
                <div class="select">
                    <select name = "adjoining">
                        <option>ADJOINING</option>
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
                <div class="select">
                    <select name = "jacuzzi">
                        <option>JACUZZI</option>
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
                <div class="select">
                    <select name = "balcony">
                        <option>BALCONY</option>
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
                <div class="select">
                    <select name = "smoke">
                        <option>SMOKE</option>
                        <option>Yes</option>
                        <option>No</option>
                    </select>

                </div>
            </div>
        </div>
        <input id = "newreservationsearch" class="button" type="submit" value="Search Room">
        </form>

        <h1 class="title is-1">CUSTOMER DETAILS</h1>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">FIRST NAME</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="FIRST NAME" name= "first_name">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">LAST NAME</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="LAST NAME" name= "last_name">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">EMAIL</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="EMAIL" name= "guest_email">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">PHONE #</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="PHONE #" name= "guest_phone">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">CREDIT CARD NUMBER</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="####-####-####-####" name= "credit_card_number">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">EXPIRATION DATE</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <input class="input" type="text" placeholder="MM/YYYY" name= "credit_card_expiration">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">TOTAL PRICE</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control ">
                        <!--This is Price/Night * total/Nights-->
                    </p>
                </div>
            </div>
        </div>
        
    </div>

    <div class="column relative is-clearfix">

        <h1 class="title is-1 is-pulled-left">ROOMS AVAILABLE</h1>

    <div class= "room-search">
        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>ROOM #</th>
                    <th>PRICE/NIGHT</th>
                    <th>MAX OCC.</th>
                    <th># OF BEDS</th>
                    <th>BED TYPE</th>
                    <th>ADJOINING</th>
                    <th>JACCUZI</th>
                    <th>BALCONY</th>
                    <th>SMOKE</th>
                </tr>
            </thead>
            <tbody>

            <%for (var i = 0; i < Rooms.length; i++){%>
        
                <tr>
                <td><%=Rooms[i].id%></td>
                <td><%=Rooms[i].price_per_night%></td>
                <td><%=Rooms[i].max_occupancy%></td>
                <td><%=Rooms[i].number_of_beds%></td>
                <td><%=Rooms[i].bed_type%></td>
                <td><%=Rooms[i].adjoining%></td>
                <td><%=Rooms[i].jacuzzi%></td>
                <td><%=Rooms[i].balcony%></td>
                <td><%=Rooms[i].smoke%></td>
                <td>
                    <form action = "/api/checkIn" method = "POST">
                    <div class="field is-horizontal">
                        <div class="field-body">
                        <div class="field has-addons">
                            <div class = "control">
                                <input id = "check-in" class = "button" type = "submit" value = "SELECT ROOM">
                            </div>
                        </div>
                        </div>
                    </div>
                    </form>
                </td>
                </tr>

            <%}%>
                <!-- <tr>
                    <td>107</td>
                    <td>150.00</td>
                    <td>3</td>
                    <td>2</td>
                    <td>QUEEN</td>
                    <td>NO</td>
                    <td>NO</td>
                    <td>NO</td>
                    <td>NO</td>
                </tr> -->
            </tbody>
        </table>
    </div>

        <div class = "columns absolute">
            <div class = "column">
                <h1 class = "title is-3">ROOM #100</h1>
                <h1 class = "title is-3"> PRICE $200 </h1> 
            </div>
            <div class = "column">
            <input class="button is-large" type="submit" value="CREATE RESERVATION">
            </div>
        </div>

    </div>




    <% include partials/footer %>